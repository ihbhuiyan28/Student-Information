@model StudentInformation.Models.Student;

<h2>Edit</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Student Name" />
            </div>
            <div class="mb-3">
                <label class="form-label">Gender</label>
                <input type="text" asp-for="Gender" class="form-control" placeholder="Student Gender" />
            </div>
            <div class="mb-3">
                <label class="form-label">Result</label>
                <input type="number" step="0.01" asp-for="Result" class="form-control" placeholder="Student Result" />
            </div>
            <div class="mb-3">
                <input type="checkbox" asp-for="IsContestant" class="form-check-input" />
                <label class="form-check-label">Is Contestant</label>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Update</button>
            </div>
        </form>
    </div>
</div>

<a class="text-decoration-none" asp-action="Index">Back to Index</a>
